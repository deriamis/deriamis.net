{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.dashboard.content.pagination": true,
  "frontMatter.content.autoUpdateDate": false,
  "frontMatter.content.fmHighlight": true,
  "frontMatter.content.wysiwyg": true,
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/src/content/posts"
    },
    {
      "title": "articles",
      "path": "[[workspace]]/src/content/articles"
    },
    {
      "title": "authors",
      "path": "[[workspace]]/src/content/authors"
    },
    {
      "title": "pages",
      "path": "[[workspace]]/src/pages"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "Post",
      "pageBundle": false,
      "previewPath": "'posts'",
      "filePrefix": null,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Author(s)",
          "name": "author",
          "type": "contentRelationship",
          "contentTypeName": "'authors'",
          "multiple": true,
          "default": "[]"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "pubDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Last modified date",
          "name": "modifiedDate",
          "type": "datetime",
          "default": "",
          "isModifiedDate": true
        },
        {
          "title": "Content preview",
          "name": "previewImage",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Related posts",
          "name": "relatedPosts",
          "type": "contentRelationship",
          "contentTypeName": "'posts'",
          "multiple": true,
          "default": "[]"
        },
        {
          "title": "Related articles",
          "name": "relatedArticles",
          "type": "contentRelationship",
          "contentTypeName": "'articles'",
          "multiple": true,
          "default": "[]" 
        }
      ]
    }
  ]
}